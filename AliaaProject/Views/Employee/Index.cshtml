@model IEnumerable<AliaaProject.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Table of Employees.....</h1>

<p>
    <a asp-action="Create" class="btn btn-info"> Add New Employee </a>
</p>


<form asp-action="Index">
    <div class="input-group md-form form-sm form-2 pl-0">
        <input name="Name" class="form-control my-0 py-1 red-border" type="text" placeholder="Search" aria-label="Search" />
        <div class="input-group-append">
            <button class="input-group-text" class="basic-text1">
                <img src="~/img/search.jpg" alt="Std_Image_Here" style="width:30px; height:30px; border-radius:50%;">
            </button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cadre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonitoringCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastMonitoringPeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsObserving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.College)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Governorate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaritalStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qualification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualificationLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualitativeGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.University)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobStyle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cadre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MonitoringCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastMonitoringPeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsObserving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.College.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Governorate.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobGroup.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaritalStatus.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualificationLevel.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QualitativeGroup.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.University.Id)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.NationalId" class="btn btn-success">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NationalId" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NationalId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
